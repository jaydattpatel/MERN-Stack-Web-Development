            "post":{
                "tags":["Users"],
                "summary":"Signup",
                "description":"User signup to signin",
                "requestBody":{
                    "content":
                    {
                        "multipart/form-data":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
