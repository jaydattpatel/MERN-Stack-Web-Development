<div class="w-100 mx-auto p-2" style="max-width: 600px">
  <div class="container p-1 w-80 mx-auto form-box my-5 rounded-md">
    <h2 style="color: #181642" class="text-center mb-3">Login</h2>

    <form action="/login" method="post" class="p-2">
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text">Email</span>
          <input
            required=""
            name="email"
            type="email"
            aria-label="email"
            class="form-control"
            placeholder="enter your email"
          />
        </div>
      </div>
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text">Password</span>
          <input
            required=""
            name="password"
            type="password"
            aria-label="password"
            class="form-control"
            placeholder="enter your password"
          />
        </div>
      </div>

      <button type="submit" class="btn btn-md mt-2 lbtn">Login</button>
    </form>
  </div>
</div>
